{
    "strictNullChecks": true,
    "allowUnreachableCode": true,
    "compilerOptions": {
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noEmitOnError": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "module": "commonjs",
        "target": "es5",
        "typeRoots": [
            "./node_modules/@types"
        ],
        "types": [
            "moment"
        ],
        "lib": [
            "es6",
            "dom",
            "es2015.iterable"
        ],
        "paths": {
            "~/*": [
                "./app/*"
            ],
            "*": [
                "./app/*",
                "./node_modules/tns-core-modules/*",
                "./node_modules/*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "platforms",
        "**/*spec.ts",
        "**/main.aot.ts"
    ]
}