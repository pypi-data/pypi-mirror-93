[Unit]
Description=Daphne server for SITENAME

[Service]
Restart=on-failure
User=USERNAME
Environment=EMAIL_PASSWORD=SECRET SMTP_EMAL_PASSWORD=SMTP_SECRET
WorkingDirectory=/root/SITENAME/sources
ExecStart=/usr/local/bin/daphne -u /tmp/SITENAME.socket PROJECT_DIR_NAME.asgiSUFFIX:application

[Install]
WantedBy=multi-user.target
