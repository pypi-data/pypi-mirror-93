load("@com_github_google_tensorstore//:utils.bzl", "cc_library_with_strip_include_prefix", "package_relative_path")

package(default_visibility = ["//visibility:public"])

cc_library_with_strip_include_prefix(
    name = "zstd",
    srcs = glob([
        "lib/common/*.h",
        "lib/common/*.c",
        "lib/compress/*.h",
        "lib/compress/*.c",
        "lib/decompress/*.h",
        "lib/decompress/*.c",
    ]),
    hdrs = ["lib/zstd.h"],
    copts = ["-I" + package_relative_path("lib/common")],
    local_defines = ["XXH_NAMESPACE=ZSTD_"],
    strip_include_prefix = "lib",
)
