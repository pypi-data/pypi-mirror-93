<?xml version="1.0" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

    <appender class="com.singularity.util.org.apache.log4j.ConsoleAppender" name="ConsoleAppender">
        <layout class="com.singularity.util.org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{ABSOLUTE} %5p [%t] %c{1} - %m%n" />
        </layout>
        <filter class="com.singularity.util.org.apache.log4j.varia.LevelRangeFilter">
            <param name="LevelMax" value="FATAL" />
            <param name="LevelMin" value="INFO" />
        </filter>

    </appender>

    <appender class="com.singularity.util.org.apache.log4j.net.SyslogAppender" name="SyslogAppender">
        <param name="Facility" value="local1" />
        <param name="FacilityPrinting" value="true" />
        <param name="SysLogHost" value="localhost" />
        <layout class="com.singularity.util.org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[%t] %d{DATE} %5p %c - %m%n" />
        </layout>
    </appender>

    <appender class="com.singularity.util.org.apache.log4j.AppDynamicsRollingFileAppender" name="AgentLogger">
        <param name="File" value="proxy.log" />
        <param name="MaxFileSize" value="5000KB" />
        <param name="MaxBackupIndex" value="5" />
        <layout class="com.singularity.util.org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[%t] %d{DATE} %5p %c - %m%n" />
        </layout>
    </appender>

    <appender class="com.singularity.util.org.apache.log4j.AppDynamicsRollingFileAppender" name="BCTAppender">
        <param name="File" value="ByteCodeTransformer.log" />
        <param name="MaxFileSize" value="5000KB" />
        <param name="MaxBackupIndex" value="5" />
        <layout class="com.singularity.util.org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[%t] %d{DATE} %5p - %m%n" />
        </layout>
    </appender>

    <appender class="com.singularity.util.org.apache.log4j.AppDynamicsRollingFileAppender" name="ThreadDumpLogger">
        <param name="File" value="thread-dump.log" />
        <param name="MaxFileSize" value="5000KB" />
        <param name="MaxBackupIndex" value="5" />
        <layout class="com.singularity.util.org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[%t] %d{DATE} %5p %c - %m%n" />
        </layout>
    </appender>

    <appender class="com.singularity.util.org.apache.log4j.AppDynamicsRollingFileAppender" name="JMXLogger">
        <param name="File" value="jmx.log" />
        <param name="MaxFileSize" value="5000KB" />
        <param name="MaxBackupIndex" value="5" />
        <layout class="com.singularity.util.org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[%t] %d{DATE} %5p %c - %m%n" />
        </layout>
    </appender>

    <appender class="com.singularity.util.org.apache.log4j.AppDynamicsRollingFileAppender" name="DynamicServiceLogger">
        <param name="File" value="dynamic-service.log" />
        <param name="MaxFileSize" value="5000KB" />
        <param name="MaxBackupIndex" value="5" />
        <layout class="com.singularity.util.org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[%t] %d{DATE} %5p %c - %m%n" />
        </layout>
    </appender>

    <appender class="com.singularity.util.org.apache.log4j.AppDynamicsRollingFileAppender" name="DataPipelineLogger">
        <param name="File" value="data-pipeline.log" />
        <param name="MaxFileSize" value="5000KB" />
        <param name="MaxBackupIndex" value="5" />
        <layout class="com.singularity.util.org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[%t] %d{DATE} %5p %c - %m%n" />
        </layout>
    </appender>

    <appender class="com.singularity.util.org.apache.log4j.AppDynamicsRollingFileAppender" name="RESTLogger">
        <param name="File" value="REST.log" />
        <param name="MaxFileSize" value="5000KB" />
        <param name="MaxBackupIndex" value="5" />
        <layout class="com.singularity.util.org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[%t] %d{DATE} %5p %c{1} - %m%n" />
        </layout>
        <filter class="com.singularity.util.org.apache.log4j.varia.StringMatchFilter">
            <param name="AcceptOnMatch" value="true" />
            <param name="StringToMatch" value="REST" />
        </filter>
        <filter class="com.singularity.util.org.apache.log4j.varia.DenyAllFilter" />
    </appender>

    <logger additivity="false" name="com.singularity">
        <level value="info" />
        <appender-ref ref="AgentLogger" />
        <appender-ref ref="RESTLogger" />
        <appender-ref ref="ConsoleAppender" />
    </logger>

    <logger additivity="false" name="com.singularity.dynamicservice">
        <level value="info" />
        <appender-ref ref="DynamicServiceLogger" />
    </logger>

    <logger additivity="false" name="com.singularity.ee.service.datapipeline">
        <level value="info" />
        <appender-ref ref="DataPipelineLogger" />
        <appender-ref ref="ConsoleAppender" />
    </logger>
    <logger additivity="false" name="com.singularity.datapipeline">
        <level value="info" />
        <appender-ref ref="DataPipelineLogger" />
        <appender-ref ref="ConsoleAppender" />
    </logger>

    <logger additivity="false" name="com.singularity.BCTLogger">
        <level value="info" />
        <appender-ref ref="BCTAppender" />
    </logger>

    <root>
        <priority value="error" />
        <appender-ref ref="AgentLogger" />
        <appender-ref ref="ConsoleAppender" />
    </root>
</log4j:configuration>