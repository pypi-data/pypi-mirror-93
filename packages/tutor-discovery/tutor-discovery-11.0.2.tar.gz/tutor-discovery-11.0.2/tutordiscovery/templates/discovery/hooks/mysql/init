mysql -u {{ MYSQL_ROOT_USERNAME }} --password="{{ MYSQL_ROOT_PASSWORD }}" --host "{{ MYSQL_HOST }}" --port {{ MYSQL_PORT }} -e 'CREATE DATABASE IF NOT EXISTS {{ DISCOVERY_MYSQL_DATABASE }};'
mysql -u {{ MYSQL_ROOT_USERNAME }} --password="{{ MYSQL_ROOT_PASSWORD }}" --host "{{ MYSQL_HOST }}" --port {{ MYSQL_PORT }} -e 'GRANT ALL ON {{ DISCOVERY_MYSQL_DATABASE }}.* TO "{{ DISCOVERY_MYSQL_USERNAME }}"@"%" IDENTIFIED BY "{{ DISCOVERY_MYSQL_PASSWORD }}";'