{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Plotting algorithm descriptor",
  "description": "This schema defines the properties of a plotting algorithm",

  "type": "object",

  "properties": {
    "language": { "$ref": "../common/1.json#/definitions/language" },
    "description": { "$ref": "../common/1.json#/definitions/description" },
    "parameters": { "$ref": "../algorithm/common.json#/definitions/parameters" },
    "dataformat": {
      "type": "string",
      "pattern": "^plot/[a-zA-Z0-9_-]+/[0-9]+$"
    },
    "uses": { "$ref": "../common/1.json#/definitions/uses" },
    "schema_version": { "$ref": "../common/1.json#/definitions/version" }
  },

  "required": [
    "language",
    "parameters",
    "dataformat"
  ],

  "additionalProperties": false
}
